<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MathBottomFragment">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:alignmentMode="alignMargins"
        app:columnCount="5"
        app:useDefaultMargins="true">
        <Button
            android:id="@+id/btnMathFragment1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:backgroundTint="#FAB12F"
            android:elevation="6dp"
            android:gravity="center"
            android:stateListAnimator="@animator/button_animator"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:strokeColor="@color/white"
            app:strokeWidth="4dp" />
        <Button
            android:id="@+id/btnMathFragment2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="7dp"
            android:backgroundTint="#FAB12F"
            app:strokeColor="@color/white"
            app:strokeWidth="4dp"
            android:text="2"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:elevation="6dp"
            android:stateListAnimator="@animator/button_animator" />

        <Button
            android:id="@+id/btnMathFragment3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="7dp"
            android:backgroundTint="#FAB12F"
            app:strokeColor="@color/white"
            app:strokeWidth="4dp"
            android:text="3"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:elevation="6dp"
            android:stateListAnimator="@animator/button_animator" />

            <Button
            android:id="@+id/btn4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="7dp"
            android:backgroundTint="#FAB12F"
            app:strokeColor="@color/white"
            app:strokeWidth="4dp"
            android:text="4"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:elevation="6dp"
            android:stateListAnimator="@animator/button_animator" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="7dp"
                android:backgroundTint="#FAB12F"
                app:strokeColor="@color/white"
                app:strokeWidth="4dp"
                android:text="5"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:elevation="6dp"
                android:stateListAnimator="@animator/button_animator" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="7dp"
                android:backgroundTint="#FAB12F"
                app:strokeColor="@color/white"
                app:strokeWidth="4dp"
                android:text="6"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:elevation="6dp"
                android:stateListAnimator="@animator/button_animator" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="7dp"
                android:backgroundTint="#FAB12F"
                app:strokeColor="@color/white"
                app:strokeWidth="4dp"
                android:text="7"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:elevation="6dp"
                android:stateListAnimator="@animator/button_animator" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="65dp"
